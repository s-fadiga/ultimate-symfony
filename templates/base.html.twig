<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Bienvenue sur SymShop !
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`	and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<link rel="stylesheet" href="https://bootswatch.com/5/solar/bootstrap.min.css">
			<link
			rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
		{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

		{% block javascripts %}

			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
			{#{{ encore_entry_script_tags('app') }} #}
		{% endblock %}
	</head>
	<body>
		{% include "shared/_navbar.html.twig" %}
		<div class="container pt-5">
			{% for rubrique, messages in app.flashes %}
				<div class="aler alert-{{rubrique}} pt-3 text-white text-center">
					{% for message in messages %}
						{{ message }}
					{% endfor %}
				</div>
			{% endfor %}
			{% block body %}{% endblock %}
		</div>
	</body>
</html>

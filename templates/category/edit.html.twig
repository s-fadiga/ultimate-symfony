{% extends "base.html.twig" %}

{% block title %}
	Modification de
	{{category.name}}
{% endblock %}

{% block body %}
	Modifier la catégorie
	{{category.name | upper}}

	{{ form_start(formView) }}
	<div class="row">
		<div class="col">
			{{ form_row(formView.name)}}

		</div>
		<div class="col"></div>
	</div>

	{{ form_errors(formView) }}

	<button type="submit" class="btn btn-primary">
		<i class="fas fa-save"></i>&nbsp;Mettre à jour
	</button>
	{{ form_end(formView)}}
{% endblock %}
